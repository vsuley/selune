# PostgreSQL Database Configuration
# Copy this file to .env and update the values as needed

# Database user (default: selune)
POSTGRES_USER=selune

# Database password (CHANGE THIS IN PRODUCTION!)
POSTGRES_PASSWORD=selune_password

# Database name (default: selune_db)
POSTGRES_DB=selune_db

# Database Connection String
# Format: postgresql://user:password@host:port/database
# When running in Docker, use 'postgres' as the host
# When connecting from host machine, use 'localhost' as the host
DATABASE_URL=postgresql://selune:selune_password@postgres:5432/selune_db

# pgAdmin Configuration
# Email used to login to pgAdmin (default: admin@selune.com)
PGADMIN_DEFAULT_EMAIL=admin@selune.com

# pgAdmin password (CHANGE THIS IN PRODUCTION!)
PGADMIN_DEFAULT_PASSWORD=admin

# Server Configuration
PORT=3001

# Vite Frontend Configuration
VITE_API_URL=http://localhost:3001
